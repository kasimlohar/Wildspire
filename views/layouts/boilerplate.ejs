<!DOCTYPE html>
<html lang="en" class="h-100" data-bs-theme="light">
<head>
    <!-- Essential Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Book your next adventure with WildSpire - Premier platform for adventure activities and experiences' %>">
    
    <!-- Security Headers -->
    <!-- <meta http-equiv="Content-Security-Policy" content="default-src 'self' https: 'unsafe-inline' 'unsafe-eval';"> -->
    <!-- <meta http-equiv="X-Content-Type-Options" content="nosniff">
    <meta http-equiv="X-Frame-Options" content="DENY"> -->

    <!-- Open Graph / Social Media Meta Tags -->
    <meta property="og:title" content="WildSpire Adventures">
    <meta property="og:type" content="website">
    <meta property="og:image" content="/images/og-image.jpg">
    <meta property="og:url" content="">
    <link rel="icon" type="image/svg+xml" href="/images/compass.svg">

    <!-- Page Title -->
    <title>WildSpire Adventures</title>

    <!-- Preload Critical Resources -->
    <!-- <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" as="style"> -->
    <link rel="stylesheet" href="/css/style.css" as="style">
    <!-- <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" as="script"> -->

    <!-- Stylesheets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> 

    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/rating.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" 
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" 
        crossorigin="anonymous" 
        referrerpolicy="no-referrer" />

    <!-- Add Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Add Swiper CSS before other stylesheets -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

    <!-- Mapbox Resources -->
    <link href="https://api.mapbox.com/mapbox-gl-js/v3.9.4/mapbox-gl.css" rel="stylesheet">
    <script src="https://api.mapbox.com/mapbox-gl-js/v3.9.4/mapbox-gl.js"></script>

    <!-- Favicon -->
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
</head>

<body class="d-flex flex-column h-100">
    <!-- Skip Navigation Link -->
    <a href="#main-content" class="visually-hidden-focusable">Skip to main content</a>

    <!-- Navigation -->
    <%- include("../includes/navbar.ejs") %>
    
    <% if(currentUrl === '/' || currentUrl === '/activities') { %>
        <%- include("../includes/hero.ejs") %>
    <% } %>

    <!-- Main Content -->
    <main id="main-content" class="container mt-4 flex-shrink-0" role="main">
        <%- include("../includes/flash.ejs") %>
        <%- body %>
    </main>

    <!-- Footer -->
    <%- include("../includes/footer.ejs") %>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" 
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" 
        crossorigin="anonymous"></script>
    
    <!-- Add Swiper JS before other scripts -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <!-- Application Scripts -->
    <script src="/js/script.js" defer></script>
    
    <!-- Conditional Mapbox Initialization -->
    <script>
        mapboxgl.accessToken = '<%= process.env.MAP_TOKEN %>';
    </script>

    <!-- Noscript Fallback -->
    <noscript>
        <div class="alert alert-danger m-3" role="alert">
            JavaScript is required for proper website functionality. Please enable it in your browser settings.
        </div>
    </noscript>
</body>
</html>