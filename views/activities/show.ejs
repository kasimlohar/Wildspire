<!-- Include the layout template -->
<% layout('layouts/boilerplate') %>

<!-- Main Container -->
<div class="container justify-content-center align-items-center">
  <div class="row justify-content-center align-items-center">
    <!-- Activity Details Section -->
    <div class="col-md-8">
      <!-- Activity Card -->
      <div class="card mb-3">
        <!-- Activity Image -->
        <img src="<%= activity.image && activity.image.url ? activity.image.url : 'default-image-url.jpg' %>" class="card-img-top" alt="<%= activity.name %>">

        <!-- Card Body -->
        <div class="card-body">
          <!-- Activity Name -->
          <h2 class="card-title"><%= activity.name %></h2>

          <!-- Activity Description -->
          <i>Owned by<b> <%= activity.owner.username %></b></i>
          <br>
          <p class="card-text"><%= activity.description %></p>

          <!-- Activity Details List -->
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Location:</strong> <%= activity.location %>, <%= activity.country %></li>
            <li class="list-group-item"><strong>Difficulty:</strong> <%= activity.difficulty %></li>
            <li class="list-group-item"><strong>Duration:</strong> <%= activity.duration %></li>
            <li class="list-group-item"><strong>Price:</strong> $<%= activity.price %></li>
            <li class="list-group-item"><strong>Guide Required:</strong> <%= activity.guideRequired ? 'Yes' : 'No' %></li>
          </ul>
        </div>
      </div>
      
      <% if(currUser && activity.owner._id.equals(currUser._id)) { %>
      <!-- Edit and Delete Buttons -->
      <div class="d-flex">
        <a href="/activities/<%= activity._id %>/edit" class="btn btn-info me-2">Edit</a>
        <form action="/activities/<%= activity._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
    </div>


    
    <!-- Reviews Section -->
    <div class="col-md-8">
      <hr />
      <% if(currUser) { %>
      <!-- Leave a Review Form -->
      <form action="/activities/<%= activity.id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label form-range">Rating</label>
        <fieldset class="starability-slot">
          <legend>First rating:</legend>
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
        </div>

        <!-- Comment Input -->
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
          <div class="invalid-feedback">Please add some comments for reviews</div>
        </div>

        <!-- Submit Button -->
        <div class="mb-3 mt-3">
          <button class="btn btn-outline-dark">Submit</button>
        </div>
      </form>
      <% } %>


      <!-- All Reviews Section -->
      <p><b>All Reviews</b></p>
      <div class="row">
        <!-- Loop through reviews and display them -->
        <% for (review of activity.reviews) { %>
          <div class="col-md-6 col-lg-4 mb-3">
            <div class="card">
              <div class="card-body">
                <!-- Reviewer Name -->
                <h5 class="card-title">@<%= review.author.username || 'Anonymous' %></h5>
                <!-- Review Rating -->
                <p class="starability-result card-text" data-rating="<%=review.rating%>">
                </p>

                <!-- Review Comment -->
                <p class="card-text"><%= review.comment %></p>

              </div>

              <!-- Delete Review Form -->
              <form class="mb-3 ms-3" method="POST" action="/activities/<%= activity._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>