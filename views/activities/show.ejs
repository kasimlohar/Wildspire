<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <div class="row g-4">
    <!-- Main Content -->
    <div class="col-lg-8">
      <article>
        <header class="mb-4">
          <h1 class="display-5 mb-3"><%= activity.name %></h1>
          <div class="d-flex align-items-center gap-3 text-muted">
            <span>
              <i class="bi bi-geo-alt"></i>
              <%= activity.location %>, <%= activity.country %>
            </span>
            <span class="badge bg-<%=activity.difficulty %>">
              <%= activity.difficulty %>
            </span>
          </div>
        </header>

        <!-- Image Gallery -->
        <section class="mb-5">
          <div class="row g-3">
            <% activity.images.forEach((image, index) => { %>
              <div class="col-6 col-md-4">
                <a href="<%= image.url %>" data-fslightbox>
                  <img src="<%= image.url %>" 
                       class="img-fluid rounded-3" 
                       alt="Activity image <%= index + 1 %>"
                       loading="lazy">
                </a>
              </div>
            <% }) %>
          </div>
        </section>

        <!-- Activity Details -->
        <section class="mb-5">
          <h2 class="h4 mb-3">Activity Details</h2>
          <div class="row row-cols-2 row-cols-md-3 g-3">
            <div class="col">
              <div class="card h-100">
                <div class="card-body">
                  <dt class="small">Duration</dt>
                  <dd class="mb-0"><%= activity.duration %></dd>
                </div>
              </div>
            </div>
            <!-- Add other details cards -->
          </div>
        </section>

        <!-- Owner Actions -->
        <% if (currUser && activity.owner._id.equals(currUser._id)) { %>
          <section class="border-top pt-4">
            <div class="d-flex gap-2">
              <a href="/activities/<%= activity._id %>/edit" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit
              </a>
              <!-- Fix: Update delete form -->
              <form action="/activities/<%= activity._id %>?_method=DELETE" method="POST" 
                    onsubmit="return confirm('Are you sure you want to delete this activity? This cannot be undone.');">
                <button type="submit" class="btn btn-outline-danger">
                  <i class="bi bi-trash"></i> Delete
                </button>
              </form>
            </div>
          </section>
        <% } %>
      </article>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <aside>
        <!-- Booking Widget -->
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h3 class="h5 card-title mb-3">Book This Adventure</h3>
            <!-- Add booking form elements -->
          </div>
        </div>

        <!-- Map -->
        <div class="card shadow-sm">
          <div class="card-body p-0">
            <div id="map" 
                 class="map-container rounded-3">
            </div>
          </div>
        </div>
      </aside>
    </div>
  </div>

  <!-- Reviews Section -->
  <section class="mt-5 pt-4 border-top">
    <!-- Add Review Form - Only show if user is logged in -->
    <% if(currUser) { %>
        <form action="/activities/<%= activity._id %>/reviews" method="POST" class="mb-4 needs-validation" novalidate>
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="number" 
                       class="form-control" 
                       id="rating" 
                       name="review[rating]" 
                       min="1" 
                       max="5" 
                       value="5" 
                       required>
                <div class="invalid-feedback">Rating must be between 1 and 5</div>
            </div>
            
            <div class="mb-3">
                <label for="comment" class="form-label">Review</label>
                <textarea class="form-control" 
                          id="comment" 
                          name="review[comment]" 
                          required 
                          minlength="1"></textarea>
                <div class="invalid-feedback">Please provide a review comment</div>
            </div>
            
            <button type="submit" class="btn btn-success">Submit Review</button>
        </form>
    <% } %>

    <!-- Reviews List -->
    <h2>Reviews</h2>
    <% if(activity.reviews.length > 0) { %>
        <div class="row">
            <% activity.reviews.forEach(review => { %>
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= review.author.username %></h5>
                            <p class="starability-result" data-rating="<%= review.rating %>"></p>
                            <p class="card-text"><%= review.comment %></p>
                            <!-- Show delete button only to review author -->
                            <% if(currUser && review.author.equals(currUser._id)) { %>
                                <form action="/activities/<%= activity._id %>/reviews/<%= review._id %>?_method=DELETE" 
                                      method="POST"
                                      class="delete-review-form"
                                      onsubmit="return confirm('Are you sure you want to delete this review?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete Review
                                    </button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <p class="text-muted">No reviews yet. Be the first to leave a review!</p>
    <% } %>
</section>
</div>