<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <div class="row g-4">
    <!-- Main Content -->
    <div class="col-lg-8">
      <article>
        <header class="mb-4">
          <h1 class="display-5 mb-3"><%= activity.name %></h1>
          <div class="d-flex align-items-center gap-3 text-muted">
            <span>
              <i class="bi bi-geo-alt"></i>
              <%= activity.location %>, <%= activity.country %>
            </span>
            <span class="badge bg-<%=activity.difficulty %>">
              <%= activity.difficulty %>
            </span>
          </div>
        </header>

        <!-- Image Gallery -->
        <section class="mb-5">
          <div class="row g-3">
            <% activity.images.forEach((image, index) => { %>
              <div class="col-6 col-md-4">
                <a href="<%= image.url %>" data-fslightbox>
                  <img src="<%= image.url %>" 
                       class="img-fluid rounded-3" 
                       alt="Activity image <%= index + 1 %>"
                       loading="lazy">
                </a>
              </div>
            <% }) %>
          </div>
        </section>

        <!-- Activity Details -->
        <section class="mb-5">
          <h2 class="h4 mb-3">Activity Details</h2>
          <div class="row row-cols-2 row-cols-md-3 g-3">
            <div class="col">
              <div class="card h-100">
                <div class="card-body">
                  <dt class="small">Duration</dt>
                  <dd class="mb-0"><%= activity.duration %></dd>
                </div>
              </div>
            </div>
            <!-- Add other details cards -->
          </div>
        </section>

        <!-- Owner Actions -->
        <% if (currUser && activity.owner._id.equals(currUser._id)) { %>
          <section class="border-top pt-4">
            <h2 class="h5 mb-3">Manage Activity</h2>
            <div class="d-flex gap-2">
              <a href="/activities/<%= activity._id %>/edit" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Edit
              </a>
              <form method="POST" action="/activities/<%= activity._id %>?_method=DELETE">
                <button type="button" 
                        class="btn btn-outline-danger"
                        data-bs-toggle="modal" 
                        data-bs-target="#deleteConfirmation">
                  <i class="bi bi-trash"></i> Delete
                </button>
              </form>
            </div>
          </section>
        <% } %>
      </article>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <aside>
        <!-- Booking Widget -->
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h3 class="h5 card-title mb-3">Book This Adventure</h3>
            <!-- Add booking form elements -->
          </div>
        </div>

        <!-- Map -->
        <div class="card shadow-sm">
          <div class="card-body p-0">
            <div id="map" 
                 class="map-container rounded-3">
            </div>
          </div>
        </div>
      </aside>
    </div>
  </div>

  <!-- Reviews Section -->
  <section class="mt-5 pt-4 border-top">
    <h2 class="h4 mb-4">Traveler Reviews</h2>
    
    <% if (activity.reviews.length > 0) { %>
      <div class="row g-3">
        <% reviews.forEach(review => { %>
          <div class="col-md-6">
            <div class="card h-100">
              <div class="card-body">
                <div class="d-flex align-items-center gap-3 mb-3">
                  <div class="avatar-sm bg-light rounded-circle"></div>
                  <div>
                    <div class="fw-medium"><%= review.author.username %></div>
                    <div class="text-muted small">
                      <%= new Date(review.createdAt).toLocaleDateString() %>
                    </div>
                  </div>
                </div>
                
                <div class="rating mb-2" 
                     aria-label="Rating: <%= review.rating %> out of 5 stars">
                  <% for (let i = 1; i <= 5; i++) { %>
                    <i class="bi bi-star<%= i <= review.rating ? '-fill' : '' %> text-warning"></i>
                  <% } %>
                </div>
                
                <p class="card-text"><%= review.comment %></p>
                
                <% if (currUser) { %>
                  <form method="POST" 
                        action="/activities/<%= activity._id %>/reviews/<%= review._id %>?_method=DELETE">
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                      Delete Review
                    </button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="alert alert-info">No reviews yet. Be the first to share your experience!</div>
    <% } %>
  </section>
</div>