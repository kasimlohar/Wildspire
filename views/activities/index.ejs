<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <h1 class="text-center mb-5 display-4">Explore Adventures</h1>
  
  <% if(typeof searchTerm !== 'undefined' && searchTerm) { %>
    <div class="alert alert-info d-flex align-items-center mb-4">
      <i class="bi bi-search me-2"></i>
      <div>
        Showing results for "<strong><%= searchTerm %></strong>" 
        (<%= allActivities.length %> <%= allActivities.length === 1 ? 'activity' : 'activities' %> found)
        <a href="/activities" class="ms-2 text-decoration-none">Clear search</a>
      </div>
    </div>
  <% } %>
  
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% if(allActivities.length === 0) { %>
      <div class="col-12">
        <div class="card text-center py-5">
          <div class="card-body">
            <% if(typeof searchTerm !== 'undefined' && searchTerm) { %>
              <i class="bi bi-search display-1 text-muted mb-3"></i>
              <h3>No Results Found</h3>
              <p class="text-muted">No activities match your search for "<%= searchTerm %>"</p>
              <a href="/activities" class="btn btn-outline-primary">View All Activities</a>
            <% } else { %>
              <i class="bi bi-compass display-1 text-muted mb-3"></i>
              <h3>No Activities Yet</h3>
              <p class="text-muted">Be the first to add an adventure!</p>
              <% if(typeof currUser !== 'undefined' && currUser) { %>
                <a href="/activities/new" class="btn btn-primary">Add Activity</a>
              <% } else { %>
                <a href="/login" class="btn btn-outline-primary">Login to Add Activity</a>
              <% } %>
            <% } %>
          </div>
        </div>
      </div>
    <% } else { %>
      <% allActivities.forEach(activity => { %>
        <div class="col">
          <a href="/activities/<%= activity._id %>" class="text-decoration-none">
            <div class="card h-100 shadow-sm">
              <div class="ratio ratio-16x9">
                <img 
                  src="<%= activity.images[0].url %>" 
                  class="card-img-top object-fit-cover" 
                  alt="<%= activity.name %> in <%= activity.location %>, <%= activity.country %>"
                  loading="lazy"
                >
              </div>
              
              <div class="card-body d-flex flex-column">
                <h2 class="h5 card-title">
                    <%= activity.name %>
                </h2>
                
                <div class="mt-auto">
                  <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="badge bg-<%=activity.difficulty %>">
                      <!-- difficultyColor(activity.difficulty) -->
                      <%= activity.difficulty %>
                    </span>
                    <span class="text-muted">
                      
                      &#8377; <%= activity.price.toFixed(2).toLocaleString("en-IN") %>
                    </span>
                  </div>
                  
                  <p class="card-text text-truncate-3 small text-muted mb-0">
                    <%= activity.description %>
                  </p>
                </div>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    <% } %>
  </div>

  <!-- < if (totalPages > 1) { %>
    <nav class="mt-5" aria-label="Activity pagination">
      <ul class="pagination justify-content-center">
        < Array.from({ length: totalPages }, (_, i) => { %>
          <li class="page-item <= currentPage === i+1 ? 'active' : '' %>">
            <a class="page-link" href="?page=<= i+1 %>"><= i+1 %></a>
          </li>
        < }) %>
      </ul>
    </nav>
  < } %> -->
</div>