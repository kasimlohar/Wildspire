<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <h1 class="text-center mb-4 display-4">Explore Adventures</h1>
  
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% allActivities.forEach(activity => { %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <div class="ratio ratio-16x9">
            <img 
              src="<%= activity.images[0].url %>" 
              class="card-img-top object-fit-cover" 
              alt="<%= activity.name %> in <%= activity.location %>, <%= activity.country %>"
              loading="lazy"
            >
          </div>
          
          <div class="card-body d-flex flex-column">
            <h2 class="h5 card-title">
              <a href="/activities/<%= activity._id %>" class="text-decoration-none">
                <%= activity.name %>
              </a>
            </h2>
            
            <div class="mt-auto">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="badge bg-<%=activity.difficulty %>">
                  <!-- difficultyColor(activity.difficulty) -->
                  <%= activity.difficulty %>
                </span>
                <span class="text-muted">
                  <i class="bi bi-currency-dollar"></i>
                  <%= activity.price.toFixed(2) %>
                </span>
              </div>
              
              <p class="card-text text-truncate-3 small text-muted mb-0">
                <%= activity.description %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

